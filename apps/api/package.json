{
  "name": "@authority/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "predev": "npm run build -w @authority/shared",
    "dev": "tsx watch src/server.ts",
    "prebuild": "npm run build -w @authority/shared",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "pretest": "npm run build -w @authority/shared",
    "test": "node --import tsx --test src/tests/*.test.ts",
    "pretypecheck": "npm run build -w @authority/shared",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "@authority/shared": "*",
    "@types/pdfkit": "^0.17.5",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "multer": "^1.4.5-lts.1",
    "pdfkit": "^0.17.2",
    "pg": "^8.13.1",
    "uuid": "^11.0.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.9.0",
    "@types/pg": "^8.11.10",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  }
}
